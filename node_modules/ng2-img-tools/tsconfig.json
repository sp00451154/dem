{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2015",
    "target": "es5",
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "declaration": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "paths": {
      "@angular/core": ["node_modules/@angular/core"],
      "rxjs": ["node_modules/rxjs"],
      "ng2-img-max": ["node_modules/ng2-img-max"]
    },
    "lib": [
      "es2015", 
      "dom"
    ]
  },
  "files": [
    "ng2-img-tools.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true
  }
}